@model IEnumerable<PRUEBAS_LOGIN.Models.Usuario>
@{
}
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Listado de Usuarios</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="assets/img/favicon.png" rel="icon">
    <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/vendor/boxicons/css/boxicons.min.css" rel="stylesheet" />
    <link href="~/vendor/quill/quill.snow.css" rel="stylesheet" />
    <link href="~/vendor/quill/quill.bubble.css" rel="stylesheet" />
    <link href="~/vendor/remixicon/remixicon.css" rel="stylesheet" />
    <link href="~/vendor/simple-datatables/style.css" rel="stylesheet" />

    <!-- Bootstrap 5 desde CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">
        <div class="d-flex align-items-center justify-content-between">
            <a href="index.html" class="logo d-flex align-items-center">
                <img src="~/images/logo.png" alt="Logo" class="img-fluid">
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div>
        <div class="search-bar">
            <form class="search-form d-flex align-items-center" method="POST" action="#">
                <input type="text" name="query" placeholder="Buscar" title="Ingrese palabra clave">
                <button type="submit" title="Buscar"><i class="bi bi-search"></i></button>
            </form>
        </div>
        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">
                <li class="nav-item dropdown pe-3">
                    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                        <span class="d-none d-md-block dropdown-toggle ps-2">@ViewBag.NombreUsuario</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li class="dropdown-header">
                            <h6>@ViewBag.NombreUsuario</h6>
                            <span>Administrador</span>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="@Url.Action("Perfil", "Usuario")">
                                <i class="bi bi-person"></i>
                                <span>Mi Perfil</span>
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="@Url.Action("Usuarios", "Usuarios")">
                                <i class="bi bi-people"></i>
                                <span>Usuarios</span>
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="@Url.Action("Facturas", "Facturacion")">
                                <i class="bi bi-receipt"></i>
                                <span>Facturas Emitidas</span>
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <form method="post" action="@Url.Action("CerrarSesion", "Home")">
                                @Html.AntiForgeryToken() <!-- Token anti-CSRF -->
                                <button type="submit" class="dropdown-item d-flex align-items-center" style="background: none; border: none; cursor: pointer;">
                                    <i class="bi bi-box-arrow-right"></i>
                                    <span>Salir</span>
                                </button>
                            </form>
                        </li>
                    </ul><!-- End Profile Dropdown Items -->
                </li><!-- End Profile Nav -->
            </ul>
        </nav><!-- End Icons Navigation -->

    </header>
    <!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">
        <ul class="sidebar-nav" id="sidebar-nav">
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Home")">
                    <i class="bi bi-grid"></i>
                    <span>Panel de Control</span>
                </a>
            </li><!-- End Dashboard Nav -->

            <li class="nav-heading">Páginas</li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="@Url.Action("Perfil", "Usuario")">
                    <i class="bi bi-person"></i>
                    <span>Perfil</span>
                </a>
            </li><!-- End Profile Page Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" href="@Url.Action("Fiscales", "Facturacion")">
                    <i class="bi bi-receipt"></i>
                    <span>Facturación</span>
                </a>
            </li><!-- End F.A.Q Page Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" href="@Url.Action("Usuarios", "Usuarios")">
                    <i class="bi bi-people"></i>
                    <span>Usuarios</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="@Url.Action("Facturas", "Facturacion")">
                    <i class="bi bi-file-earmark-text"></i>    
                    <span>Facturas Emitidos</span>
                </a>
            </li><!-- End Error 404 Page Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" href="@Url.Action("Registrar", "Acceso")">
                    <i class="bi bi-card-list"></i>
                    <span>Registro</span>
                </a>
            </li><!-- End Register Page Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" href="@Url.Action("Login", "Acceso")">
                    <i class="bi bi-box-arrow-in-right"></i>
                    <span>Inicio de Sesión</span>
                </a>
            </li><!-- End Login Page Nav -->
        </ul>
    </aside><!-- End Sidebar-->
    <!-- End Sidebar-->
    <!-- ======= Main Content ======= -->
    <main id="main" class="main">
        <div class="container mt-5">
            <div class="pagetitle">
                <h1>Listado de Usuarios</h1>
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                        <li class="breadcrumb-item">Administrador</li>
                        <li class="breadcrumb-item active">Listado de Usuarios</li>
                    </ol>
                </nav>
            </div><!-- End Page Title -->
            <br />

            @* Alertas dismissibles para mostrar mensajes *@
            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-@(TempData["MensajeTipo"] ?? "info") alert-dismissible fade show" role="alert">
                    @Html.Raw(TempData["Mensaje"])
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (ViewData["MensajeError"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @Html.Raw(ViewData["MensajeError"])
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Botón para abrir el modal de Nuevo Usuario -->
            <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#nuevoModal">
                <i class="bi bi-plus-circle"></i> Nuevo Registro
            </button>

            <!-- Tabla con los usuarios -->
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>E-mail</th>
                        <th>Nombre Completo</th>
                        <th>Estatus</th>
                        <th>Fecha Creación</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdUsuario</td>
                            <td>@item.Correo</td>
                            <td>@($"{item.Nombre} {item.ApellidoPaterno} {item.ApellidoMaterno}".Trim())</td>
                            <td>
                                @if (item.Estatus == 1)
                                {
                                    <span class="badge bg-success">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactivo</span>
                                }
                            </td>
                            <td>@item.FechaCreacion.ToString("dd/MM/yyyy")</td>
                            <td>
                                <div class="dropdown">
                                    <!-- Botón de tres puntos -->
                                    <button class="btn btn-sm border-0 bg-transparent text-dark" type="button" id="igDropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <!-- Menú desplegable estilo IG -->
                                    <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="igDropdownMenuButton" style="min-width: 150px;">
                                        <li>
                                            <button class="dropdown-item d-flex align-items-center" type="button" data-bs-toggle="modal" data-bs-target="#modalEditarDatos_@item.IdUsuario">
                                                <span class="me-2 rounded-circle bg-warning d-flex justify-content-center align-items-center" style="width: 30px; height: 30px;">
                                                    <i class="bi bi-pencil text-white mx-auto"></i>
                                                </span>
                                                <span>Editar Datos Personales</span>
                                            </button>
                                        </li>
                                        <li>
                                            <button class="dropdown-item d-flex align-items-center" type="button" data-bs-toggle="modal" data-bs-target="#modalEditarClave_@item.IdUsuario">
                                                <span class="me-2 rounded-circle bg-info d-flex justify-content-center align-items-center" style="width: 30px; height: 30px;">
                                                    <i class="bi bi-key text-white mx-auto"></i>
                                                </span>
                                                <span>Cambiar Contraseña</span>
                                            </button>
                                        </li>
                                        <li>
                                            <button class="dropdown-item d-flex align-items-center" type="button" data-bs-toggle="modal" data-bs-target="#modalCambiarEstatus_@item.IdUsuario">
                                                <span class="me-2 rounded-circle bg-secondary d-flex justify-content-center align-items-center" style="width: 30px; height: 30px;">
                                                    <i class="bi bi-toggle-on text-white mx-auto"></i>
                                                </span>
                                                <span>Cambiar Estatus</span>
                                            </button>
                                        </li>
                                        @if (item.IdUsuario != 6)
                                        {
                                            <li>
                                                <!-- Se abre el modal de confirmación de eliminación -->
                                                <button class="dropdown-item d-flex align-items-center" type="button" data-bs-toggle="modal" data-bs-target="#modalEliminar_@item.IdUsuario">
                                                    <span class="me-2 rounded-circle bg-danger d-flex justify-content-center align-items-center" style="width: 30px; height: 30px;">
                                                        <i class="bi bi-trash text-white mx-auto"></i>
                                                    </span>
                                                    <span>Eliminar Usuario</span>
                                                </button>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </td>
                        </tr>
                        @if (item.IdUsuario != 6)
                        {
                            <!-- Modal de confirmación de eliminación -->
                            <div class="modal fade" id="modalEliminar_@item.IdUsuario" tabindex="-1" aria-labelledby="modalEliminarLabel_@item.IdUsuario" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="modalEliminarLabel_@item.IdUsuario">Confirmar eliminación</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                                        </div>
                                        <div class="modal-body">
                                            ¿Estás seguro de que deseas eliminar este usuario?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                            <form action="@Url.Action("Eliminar", "Usuarios")" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="IdUsuario" value="@item.IdUsuario" />
                                                <button type="submit" class="btn btn-danger">Eliminar</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <!-- Modal para editar datos (correo, nombre y apellidos) -->
                        <div class="modal fade" id="modalEditarDatos_@item.IdUsuario" tabindex="-1" aria-labelledby="modalEditarDatosLabel_@item.IdUsuario" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <form action="@Url.Action("Editar", "Usuarios")" method="post">
                                        @Html.AntiForgeryToken()
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="modalEditarDatosLabel_@item.IdUsuario">Editar Datos</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                                        </div>
                                        <div class="modal-body">
                                            <input type="hidden" name="IdUsuario" value="@item.IdUsuario" />
                                            <div class="mb-3">
                                                <label for="Correo_@item.IdUsuario" class="form-label">E-mail*</label>
                                                <input type="email" class="form-control" id="Correo_@item.IdUsuario" name="Correo" value="@item.Correo" required />
                                            </div>
                                            <div class="mb-3">
                                                <label for="Nombre_@item.IdUsuario" class="form-label">Nombre*</label>
                                                <input type="text" class="form-control" id="Nombre_@item.IdUsuario" name="Nombre" value="@item.Nombre" required />
                                            </div>
                                            <div class="mb-3">
                                                <label for="ApellidoPaterno_@item.IdUsuario" class="form-label">Apellido Paterno*</label>
                                                <input type="text" class="form-control" id="ApellidoPaterno_@item.IdUsuario" name="ApellidoPaterno" value="@item.ApellidoPaterno" required />
                                            </div>
                                            <div class="mb-3">
                                                <label for="ApellidoMaterno_@item.IdUsuario" class="form-label">Apellido Materno</label>
                                                <input type="text" class="form-control" id="ApellidoMaterno_@item.IdUsuario" name="ApellidoMaterno" value="@item.ApellidoMaterno" />
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <!-- Modal para editar contraseña -->
                        <div class="modal fade" id="modalEditarClave_@item.IdUsuario" tabindex="-1" aria-labelledby="modalEditarClaveLabel_@item.IdUsuario" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <form action="@Url.Action("ActualizarClave", "Usuarios")" method="post">
                                        @Html.AntiForgeryToken()
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="modalEditarClaveLabel_@item.IdUsuario">Editar Contraseña</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                                        </div>
                                        <div class="modal-body">
                                            <input type="hidden" name="IdUsuario" value="@item.IdUsuario" />
                                            <div class="mb-3">
                                                <label for="NuevaClave_@item.IdUsuario" class="form-label">Nueva Contraseña*</label>
                                                <div class="input-group">
                                                    <input type="password" class="form-control" id="NuevaClave_@item.IdUsuario" name="NuevaClave" required />
                                                    <span class="input-group-text toggle-password" data-target="NuevaClave_@item.IdUsuario">
                                                        <i class="bi bi-eye"></i>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <label for="ConfirmarClave_@item.IdUsuario" class="form-label">Confirmar Contraseña*</label>
                                                <div class="input-group">
                                                    <input type="password" class="form-control" id="ConfirmarClave_@item.IdUsuario" name="ConfirmarClave" required />
                                                    <span class="input-group-text toggle-password" data-target="ConfirmarClave_@item.IdUsuario">
                                                        <i class="bi bi-eye"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                            <button type="submit" class="btn btn-primary">Actualizar Contraseña</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <!-- Modal para cambiar estatus -->
                        <div class="modal fade" id="modalCambiarEstatus_@item.IdUsuario" tabindex="-1" aria-labelledby="modalCambiarEstatusLabel_@item.IdUsuario" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <form action="@Url.Action("CambiarEstatus", "Usuarios")" method="post">
                                        @Html.AntiForgeryToken()
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="modalCambiarEstatusLabel_@item.IdUsuario">Cambiar Estatus</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                                        </div>
                                        <div class="modal-body">
                                            <input type="hidden" name="IdUsuario" value="@item.IdUsuario" />
                                            <p>¿Desea cambiar el estatus de este usuario?</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                            <button type="submit" class="btn btn-primary">Cambiar Estatus</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </tbody>
            </table>

            <script>
                document.querySelectorAll('.toggle-password').forEach(button => {
                    button.addEventListener('click', function () {
                        const targetId = this.getAttribute('data-target');
                        const input = document.getElementById(targetId);
                        if (input.type === 'password') {
                            input.type = 'text';
                            this.innerHTML = '<i class="bi bi-eye-slash"></i>';
                        } else {
                            input.type = 'password';
                            this.innerHTML = '<i class="bi bi-eye"></i>';
                        }
                    });
                });
            </script>

        </div>

        <!-- Modal para agregar Nuevo Usuario -->
        <div class="modal fade" id="nuevoModal" tabindex="-1" aria-labelledby="nuevoModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form action="@Url.Action("Nuevo", "Usuarios")" method="post">
                        @Html.AntiForgeryToken()
                        <div class="modal-header">
                            <h5 class="modal-title" id="nuevoModalLabel">Nuevo Usuario</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                        </div>
                        <div class="modal-body">
                            <div class="mb-3">
                                <label for="Correo" class="form-label">E-mail*</label>
                                <input type="email" class="form-control" id="Correo" name="Correo" required>
                            </div>
                            <div class="mb-3">
                                <label for="Clave" class="form-label">Contraseña*</label>
                                <div class="input-group">
                                    <input type="password" class="form-control" id="Clave" name="Clave" required>
                                    <span class="input-group-text toggle-password" data-target="Clave">
                                        <i class="bi bi-eye"></i>
                                    </span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="ConfirmarClave" class="form-label">Confirmar Contraseña*</label>
                                <div class="input-group">
                                    <input type="password" class="form-control" id="ConfirmarClave" name="ConfirmarClave" required>
                                    <span class="input-group-text toggle-password" data-target="ConfirmarClave">
                                        <i class="bi bi-eye"></i>
                                    </span>
                                </div>
                            </div>

                            <script>
                                document.querySelectorAll('.toggle-password').forEach(button => {
                                    button.addEventListener('click', function () {
                                        const targetId = this.getAttribute('data-target');
                                        const input = document.getElementById(targetId);
                                        if (input.type === 'password') {
                                            input.type = 'text';
                                            this.innerHTML = '<i class="bi bi-eye-slash"></i>';
                                        } else {
                                            input.type = 'password';
                                            this.innerHTML = '<i class="bi bi-eye"></i>';
                                        }
                                    });
                                });
                            </script>

                            <div class="mb-3">
                                <label for="Nombre" class="form-label">Nombre*</label>
                                <input type="text" class="form-control" id="Nombre" name="Nombre" required>
                            </div>
                            <div class="mb-3">
                                <label for="ApellidoPaterno" class="form-label">Apellido Paterno*</label>
                                <input type="text" class="form-control" id="ApellidoPaterno" name="ApellidoPaterno" required>
                            </div>
                            <div class="mb-3">
                                <label for="ApellidoMaterno" class="form-label">Apellido Materno</label>
                                <input type="text" class="form-control" id="ApellidoMaterno" name="ApellidoMaterno">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                            <button type="submit" class="btn btn-primary">Guardar Usuario</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </main>    <!-- End Main Content -->
    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">
        <div class="copyright">
            &copy; Copyright <strong><span>NiceAdmin</span></strong>. Todos los derechos reservados.
        </div>
        <div class="credits">
            Diseñado por <a href="https://bootstrapmade.com/">BootstrapMade</a>
        </div>
    </footer>
    <!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Scripts de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/main.js"></script>
    <!-- Vendor JS Files -->
    <script src="~/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/chart.js/chart.umd.js"></script>
    <script src="~/vendor/echarts/echarts.min.js"></script>
    <script src="~/vendor/quill/quill.js"></script>
    <script src="~/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/vendor/tinymce/tinymce.min.js"></script>
</body>

</html>
