        </div><!-- End Page Title -->
        <!-- Formulario de Captura de datos fiscales -->
        <!-- Fondo brillante de color azul -->
        <!-- Tarjeta -->
        @if (!(ViewBag.HasFiscalData ?? false))
        {
            <div class="card">
                <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
                    <h1 class="text-center mb-2 mt-5">Captura de Datos Fiscales</h1>
                    <p class="text-center text-muted" style="font-size: 0.6rem; margin-bottom: 5%;">
                        Por favor, completa los campos requeridos con tus datos fiscales para emitir la factura correctamente.
                    </p>
                    @if (TempData["Mensaje"] != null)
                    {
                        <div class="alert alert-@TempData["TipoMensaje"]">
                            @TempData["Mensaje"]
                            @if (TempData["Debug"] != null)
                            {
                                <pre>@TempData["Debug"]</pre>
                            }
                        </div>
                    }

                    <form asp-action="Fiscales" method="POST">
                        <!-- Datos de Domicilio -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="calle" class="form-label">Calle *</label>
                                <input type="text" class="form-control" id="calle" name="Calle" required>
                            </div>
                            <div class="col-md-3">
                                <label for="noExterior" class="form-label">No. Exterior *</label>
                                <input type="text" class="form-control" id="noExterior" name="NoExterior" required>
                            </div>
                            <div class="col-md-3">
                                <label for="noInterior" class="form-label">No. Interior</label>
                                <input type="text" class="form-control" id="noInterior" name="NoInterior">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="codigoPostal" class="form-label">Código Postal *</label>
                                <input type="text" class="form-control" id="codigoPostal" name="codigoPostal" required>
                            </div>
                            <div class="col-md-6">
                                <label for="colonia" class="form-label">Colonia *</label>
                                <input type="text" class="form-control" id="colonia" name="colonia" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="municipio" class="form-label">Del./Municipio *</label>
                                <input type="text" class="form-control" id="municipio" name="municipio" required>
                            </div>
                            <div class="col-md-6">
                                <label for="ciudad" class="form-label">Ciudad *</label>
                                <input type="text" class="form-control" id="ciudad" name="ciudad" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="estado" class="form-label">Estado *</label>
                                <input type="text" class="form-control" id="estado" name="estado" required>
                            </div>
                            <div class="col-md-6">
                                <label for="pais" class="form-label">País *</label>
                                <input type="text" class="form-control" id="pais" name="pais" required>
                            </div>
                        </div>
                        <!-- Datos Fiscales -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="tipoPersona" class="form-label">Tipo de Persona *</label>
                                <select class="form-select" id="tipoPersona" name="tipoPersona" required>
                                    <option value="Moral">Moral</option>
                                    <option value="Fisica">Física</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="rfc" class="form-label">RFC *</label>
                                <input type="text" class="form-control" id="rfc" name="rfc" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label for="razonSocial" class="form-label">Razón Social *</label>
                                <input type="text" class="form-control" id="razonSocial" name="razonSocial" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="usoCFDI" class="form-label">Uso del CFDI *</label>
                                <input type="text" class="form-control" id="usoCFDI" name="usoCFDI" required>
                            </div>
                            <div class="col-md-6">
                                <label for="regimenFiscal" class="form-label">Régimen Fiscal *</label>
                                <input type="text" class="form-control" id="regimenFiscal" name="regimenFiscal" required>
                            </div>
                        </div>
                        <br>
                        <!-- Botón de envío -->
                        <div class="text-center mb-3">
                            <button type="submit" class="btn btn-primary" style="width: 80%;">
                                <i class="bi bi-save"></i> Guardar Datos
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                <i class="bi bi-check-circle-fill"></i> Ya se han registrado tus datos fiscales.
            </div>
        }

<!-- TARJETA DE EDITAR INFORMACION FISCAL -->
<div class="card">
    <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
        <div class="col-xl-12">
            <!-- Bordered Tabs -->
            <ul class="nav nav-tabs nav-tabs-bordered">
                <li class="nav-item">
                    <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Resumen</button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-edit">Actualizar Datos</button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-settings">Generar Factura</button>
                </li>
            </ul>

            <div class="tab-content pt-2">
                <!-- Pestaña de Resumen -->
                <div class="tab-pane fade show active profile-overview" id="profile-overview">
                    <h5 class="card-title">Datos Fiscales</h5>
                    <p class="small fst-italic">Por favor, revisa los datos fiscales proporcionados para emitir la factura correctamente.</p>
                            @if (!hasFiscalData)
                            {
                                <div class="alert alert-warning text-center">
                                    No se encontraron datos fiscales registrados. Por favor, captura tus datos.
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(mensaje))
                            {
                                <div class="alert alert-@(tipoMensaje ?? "info") alert-dismissible fade show" role="alert">
                                    @if (tipoMensaje == "success")
                                    {
                                        <i class="bi bi-check-circle-fill"></i>
                                    }
                                    else if (tipoMensaje == "danger")
                                    {
                                        <i class="bi bi-x-circle-fill"></i>
                                    }
                                    @mensaje
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }

                    <!-- Datos de Domicilio -->
                    <h5 class="card-title mt-4">Datos de Domicilio</h5>
                    <div class="row">
                        <div class="col-lg-3 col-md-4 label fw-bold">Calle</div>
                        <div class="col-lg-9 col-md-8">@Model?.Calle</div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-md-4 label fw-bold">No. Exterior</div>
                        <div class="col-lg-9 col-md-8">@Model?.NoExterior</div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-md-4 label fw-bold">No. Interior</div>
                        <div class="col-lg-9 col-md-8">@Model?.NoInterior</div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-md-4 label fw-bold">Código Postal</div>
                        <div class="col-lg-9 col-md-8">@Model?.CodigoPostal</div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-md-4 label fw-bold">Colonia</div>
                        <div class="col-lg-9 col-md-8">@Model?.Colonia</div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-md-4 label fw-bold">Del./Municipio</div>
                        <div class="col-lg-9 col-md-8">@Model?.DelMunicipio</div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-md-4 label fw-bold">Ciudad</div>
                        <div class="col-lg-9 col-md-8">@Model?.Ciudad</div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-md-4 label fw-bold">Estado</div>
                        <div class="col-lg-9 col-md-8">@Model?.Estado</div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-md-4 label fw-bold">País</div>
                        <div class="col-lg-9 col-md-8">@Model?.Pais</div>
                    </div>

                    <hr class="my-4">

                    <!-- Datos Fiscales -->
                    <h5 class="card-title">Datos Fiscales</h5>
                    <div class="row">
                        <div class="col-lg-3 col-md-4 label fw-bold">Tipo de Persona</div>
                        <div class="col-lg-9 col-md-8">@Model?.TipoPersona</div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-md-4 label fw-bold">RFC</div>
                        <div class="col-lg-9 col-md-8">@Model?.RFC</div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-md-4 label fw-bold">Razón Social</div>
                        <div class="col-lg-9 col-md-8">@Model?.RazonSocial</div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-md-4 label fw-bold">Uso del CFDI</div>
                        <div class="col-lg-9 col-md-8">@Model?.CFDI</div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-md-4 label fw-bold">Régimen Fiscal</div>
                        <div class="col-lg-9 col-md-8">@Model?.Regimen</div>
                    </div>
                </div>

                <!-- Pestaña de Actualizar Datos -->
                <div class="tab-pane fade profile-edit pt-3" id="profile-edit">
                    <h5 class="card-title">Editar Datos Fiscales</h5>
                            @if (!hasFiscalData)
                            {
                                <div class="alert alert-warning text-center">
                                    No se encontraron datos fiscales registrados. Por favor, captura tus datos.
                                </div>
                            }                          
                          
                    <form asp-action="ActualizarFiscal" method="POST">
                        <!-- Datos de Domicilio -->
                        <div class="row mb-3">
                            <label for="calle" class="col-md-4 col-lg-3 col-form-label">Calle *</label>
                            <div class="col-md-8 col-lg-9">
                                <input name="Calle" type="text" class="form-control" id="calle" value="@Model?.Calle" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="noExterior" class="col-md-4 col-lg-3 col-form-label">No. Exterior *</label>
                            <div class="col-md-8 col-lg-9">
                                <input name="NoExterior" type="text" class="form-control" id="noExterior" value="@Model?.NoExterior" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="noInterior" class="col-md-4 col-lg-3 col-form-label">No. Interior</label>
                            <div class="col-md-8 col-lg-9">
                                <input name="NoInterior" type="text" class="form-control" id="noInterior" value="@Model?.NoInterior">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="codigoPostal" class="col-md-4 col-lg-3 col-form-label">Código Postal *</label>
                            <div class="col-md-8 col-lg-9">
                                <input name="CodigoPostal" type="text" class="form-control" id="codigoPostal" value="@Model?.CodigoPostal" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="colonia" class="col-md-4 col-lg-3 col-form-label">Colonia *</label>
                            <div class="col-md-8 col-lg-9">
                                <input name="Colonia" type="text" class="form-control" id="colonia" value="@Model?.Colonia" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="municipio" class="col-md-4 col-lg-3 col-form-label">Del./Municipio *</label>
                            <div class="col-md-8 col-lg-9">
                                <input name="DelMunicipio" type="text" class="form-control" id="municipio" value="@Model?.DelMunicipio" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="ciudad" class="col-md-4 col-lg-3 col-form-label">Ciudad *</label>
                            <div class="col-md-8 col-lg-9">
                                <input name="Ciudad" type="text" class="form-control" id="ciudad" value="@Model?.Ciudad" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="estado" class="col-md-4 col-lg-3 col-form-label">Estado *</label>
                            <div class="col-md-8 col-lg-9">
                                <input name="Estado" type="text" class="form-control" id="estado" value="@Model?.Estado" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="pais" class="col-md-4 col-lg-3 col-form-label">País *</label>
                            <div class="col-md-8 col-lg-9">
                                <input name="Pais" type="text" class="form-control" id="pais" value="@Model?.Pais" required>
                            </div>
                        </div>
                        
                        <hr class="my-4">
                        
                        <!-- Datos Fiscales -->
                        <div class="row mb-3">
                            <label for="tipoPersona" class="col-md-4 col-lg-3 col-form-label">Tipo de Persona *</label>
                            <div class="col-md-8 col-lg-9">
                                        <select name="TipoPersona" class="form-select" id="tipoPersona" required>
                                            @if (Model != null && Model.TipoPersona == "Física")
                                            {
                                                <option value="Física" selected>Física</option>
                                            }
                                            else
                                            {
                                                <option value="Física">Física</option>
                                            }

                                            @if (Model != null && Model.TipoPersona == "Moral")
                                            {
                                                <option value="Moral" selected>Moral</option>
                                            }
                                            else
                                            {
                                                <option value="Moral">Moral</option>
                                            }
                                        </select>

                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="rfc" class="col-md-4 col-lg-3 col-form-label">RFC *</label>
                            <div class="col-md-8 col-lg-9">
                                <input name="RFC" type="text" class="form-control" id="rfc" value="@Model?.RFC" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="razonSocial" class="col-md-4 col-lg-3 col-form-label">Razón Social *</label>
                            <div class="col-md-8 col-lg-9">
                                <input name="RazonSocial" type="text" class="form-control" id="razonSocial" value="@Model?.RazonSocial" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="usoCFDI" class="col-md-4 col-lg-3 col-form-label">Uso del CFDI *</label>
                            <div class="col-md-8 col-lg-9">
                                <input name="CFDI" type="text" class="form-control" id="usoCFDI" value="@Model?.CFDI" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="regimenFiscal" class="col-md-4 col-lg-3 col-form-label">Régimen Fiscal *</label>
                            <div class="col-md-8 col-lg-9">
                                <input name="Regimen" type="text" class="form-control" id="regimenFiscal" value="@Model?.Regimen" required>
                            </div>
                        </div>
                        
                        <!-- Campo oculto para IdFiscal -->
                        <input type="hidden" name="IdFiscal" value="@Model?.IdFiscal" />

                        <!-- Botón para guardar cambios -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                        </div>
                    </form>
