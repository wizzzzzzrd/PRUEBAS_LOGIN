@model PRUEBAS_LOGIN.Models.Fiscales

@{
    ViewData["Title"] = "Datos Fiscales";
    bool hasFiscalData = ViewBag.HasFiscalData ?? false;
    string tipoMensaje = TempData["TipoMensaje"] as string;
    string mensaje = TempData["Mensaje"] as string;
}
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Panel de Cliente - Facturación</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="assets/img/favicon.png" rel="icon">
    <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/vendor/boxicons/css/boxicons.min.css" rel="stylesheet" />
    <link href="~/vendor/quill/quill.snow.css" rel="stylesheet" />
    <link href="~/vendor/quill/quill.bubble.css" rel="stylesheet" />
    <link href="~/vendor/remixicon/remixicon.css" rel="stylesheet" />
    <link href="~/vendor/simple-datatables/style.css" rel="stylesheet" />

    <!-- Agregar Bootstrap 5 desde CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">
        <div class="d-flex align-items-center justify-content-between">
            <a href="index.html" class="logo d-flex align-items-center">

                <img src="~/images/logo.png" alt="Imagen grande" class="img-fluid h-75">
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div><!-- End Logo -->

        <div class="search-bar">
            <form class="search-form d-flex align-items-center" method="POST" action="#">
                <input type="text" name="query" placeholder="Buscar" title="Ingrese palabra clave">
                <button type="submit" title="Buscar"><i class="bi bi-search"></i></button>
            </form>
        </div><!-- End Search Bar -->
        @if (ViewBag.IdUsuario == 6)
        {
            <nav class="header-nav ms-auto">
                <ul class="d-flex align-items-center">
                    <li class="nav-item dropdown pe-3">
                        <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                            <span class="d-none d-md-block dropdown-toggle ps-2">@ViewBag.NombreUsuario</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                            <li class="dropdown-header">
                                <h6>@ViewBag.NombreUsuario</h6>
                                <span>Administrador</span>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>

                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="@Url.Action("Perfil", "Usuario")">
                                    <i class="bi bi-person"></i>
                                    <span>Mi Perfil</span>
                                </a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>

                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="@Url.Action("Usuarios", "Usuarios")">
                                    <i class="bi bi-people"></i>
                                    <span>Usuarios</span>
                                </a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>

                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="@Url.Action("Facturas", "Facturacion")">
                                    <i class="bi bi-receipt"></i>
                                    <span>Facturas Emitidas</span>
                                </a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <form method="post" action="@Url.Action("CerrarSesion", "Home")">
                                    @Html.AntiForgeryToken() <!-- Token anti-CSRF -->
                                    <button type="submit" class="dropdown-item d-flex align-items-center" style="background: none; border: none; cursor: pointer;">
                                        <i class="bi bi-box-arrow-right"></i>
                                        <span>Salir</span>
                                    </button>
                                </form>
                            </li>
                        </ul><!-- End Profile Dropdown Items -->
                    </li><!-- End Profile Nav -->
                </ul>
            </nav>

            <!-- End Icons Navigation -->
        }
        else
        {
            <nav class="header-nav ms-auto">
                <ul class="d-flex align-items-center">
                    <li class="nav-item dropdown pe-3">
                        <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                            <span class="d-none d-md-block dropdown-toggle ps-2">@ViewBag.NombreUsuario</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                            <li class="dropdown-header">
                                <h6>@ViewBag.NombreUsuario</h6>
                                <span>Usuario</span>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>

                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="@Url.Action("Perfil", "Usuario")">
                                    <i class="bi bi-person"></i>
                                    <span>Mi Perfil</span>
                                </a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>

                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="@Url.Action("Documentos", "Historial")">
                                    <i class="bi bi-file-earmark"></i>
                                    <span>Documentos Emitidos</span>
                                </a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>

                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="@Url.Action("Fiscales", "Facturacion")">
                                    <i class="bi bi-receipt"></i>
                                    <span>Facturación</span>
                                </a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <form method="post" action="@Url.Action("CerrarSesion", "Home")">
                                    @Html.AntiForgeryToken() <!-- Token anti-CSRF -->
                                    <button type="submit" class="dropdown-item d-flex align-items-center" style="background: none; border: none; cursor: pointer;">
                                        <i class="bi bi-box-arrow-right"></i>
                                        <span>Salir</span>
                                    </button>
                                </form>
                            </li>

                        </ul><!-- End Profile Dropdown Items -->
                    </li><!-- End Profile Nav -->
                </ul>
            </nav>

            <!-- End Icons Navigation -->
        }
    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">
        <ul class="sidebar-nav" id="sidebar-nav">
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Home")">
                    <i class="bi bi-grid"></i>
                    <span>Panel de Control</span>
                </a>
            </li><!-- End Dashboard Nav -->

            <li class="nav-heading">Páginas</li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="@Url.Action("Perfil", "Usuario")">
                    <i class="bi bi-person"></i>
                    <span>Perfil</span>
                </a>
            </li><!-- End Profile Page Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" href="@Url.Action("Fiscales", "Facturacion")">
                    <i class="bi bi-receipt"></i>
                    <span>Facturación</span>
                </a>
            </li><!-- End F.A.Q Page Nav -->
            @if (ViewBag.IdUsuario == 6)
            {
                <li class="nav-item">
                    <a class="nav-link collapsed" href="@Url.Action("Usuarios", "Usuarios")">
                        <i class="bi bi-people"></i>
                        <span>Usuarios</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link collapsed" href="@Url.Action("Facturas", "Facturacion")">
                        <i class="bi bi-file-earmark-text"></i>
                        <span>Facturas Emitidos</span>
                    </a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link collapsed" href="@Url.Action("Ventas", "Historial")">
                        <i class="bi bi-currency-dollar"></i>
                        <span>Ventas</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link collapsed" href="@Url.Action("Documentos", "Historial")">
                        <i class="bi bi-file-earmark"></i>
                        <span>Documentos Emitidos</span>
                    </a>
                </li>
            }
            <li class="nav-item">
                <a class="nav-link collapsed" href="@Url.Action("Registrar", "Acceso")">
                    <i class="bi bi-card-list"></i>
                    <span>Registro</span>
                </a>
            </li><!-- End Register Page Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" href="@Url.Action("Login", "Acceso")">
                    <i class="bi bi-box-arrow-in-right"></i>
                    <span>Inicio de Sesión</span>
                </a>
            </li><!-- End Login Page Nav -->
        </ul>
    </aside><!-- End Sidebar-->





    <main id="main" class="main my-4">

        <div class="pagetitle">
            <h1>Facturación</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Inicio</a></li>
                    <li class="breadcrumb-item">Usuarios</li>
                    <li class="breadcrumb-item active">Facturación</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->
        <!-- Formulario de Captura de datos fiscales -->
        <!-- Fondo brillante de color azul -->
        <!-- Tarjeta -->
        @if (!(ViewBag.HasFiscalData ?? false))
        {
            <div class="card">
                <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
                    <h1 class="text-center mb-2 mt-5">Captura de Datos Fiscales</h1>
                    <p class="text-center text-muted" style="font-size: 0.6rem; margin-bottom: 5%;">
                        Por favor, completa los campos requeridos con tus datos fiscales para emitir la factura correctamente.
                    </p>
                    @if (TempData["Mensaje"] != null)
                    {
                        <div class="alert alert-@TempData[" TipoMensaje"]">
                            @TempData["Mensaje"]
                            @if (TempData["Debug"] != null)
                            {
                                <pre>@TempData["Debug"]</pre>
                            }
                        </div>
                    }

                    <form asp-action="Fiscales" method="POST">
                        <!-- Datos de Domicilio -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="calle" class="form-label">Calle *</label>
                                <input type="text" class="form-control" id="calle" name="Calle" required>
                            </div>
                            <div class="col-md-3">
                                <label for="noExterior" class="form-label">No. Exterior *</label>
                                <input type="text" class="form-control" id="noExterior" name="NoExterior" required>
                            </div>
                            <div class="col-md-3">
                                <label for="noInterior" class="form-label">No. Interior</label>
                                <input type="text" class="form-control" id="noInterior" name="NoInterior">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="codigoPostal" class="form-label">Código Postal *</label>
                                <input type="text" class="form-control" id="codigoPostal" name="codigoPostal" required>
                            </div>
                            <div class="col-md-6">
                                <label for="colonia" class="form-label">Colonia *</label>
                                <input type="text" class="form-control" id="colonia" name="colonia" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="municipio" class="form-label">Del./Municipio *</label>
                                <input type="text" class="form-control" id="municipio" name="municipio" required>
                            </div>
                            <div class="col-md-6">
                                <label for="ciudad" class="form-label">Ciudad *</label>
                                <input type="text" class="form-control" id="ciudad" name="ciudad" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="estado" class="form-label">Estado *</label>
                                <input type="text" class="form-control" id="estado" name="estado" required>
                            </div>
                            <div class="col-md-6">
                                <label for="pais" class="form-label">País *</label>
                                <input type="text" class="form-control" id="pais" name="pais" required>
                            </div>
                        </div>
                        <!-- Datos Fiscales -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="tipoPersona" class="form-label">Régimen Fiscal *</label>
                                <select name="TipoPersona" class="form-select" id="tipoPersona" required>
                                    <option value="">Seleccione una opción</option>
                                    @if (ViewBag.RegimenesFiscales != null)
                                    {
                                        foreach (var regimen in ViewBag.RegimenesFiscales)
                                        {
                                            <option value="@regimen.TipoPersona" selected="@(Model != null && Model.TipoPersona == regimen.TipoPersona ? "selected" : null)">
                                                @($"{regimen.ClaveRegimenFiscal} - {regimen.Descripcion} ({regimen.TipoPersona})")
                                            </option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="rfc" class="form-label">RFC *</label>
                                <input type="text" class="form-control" id="rfc" name="rfc" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label for="razonSocial" class="form-label">Razón Social *</label>
                                <input type="text" class="form-control" id="razonSocial" name="razonSocial" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="usoCFDI" class="form-label">Uso CFDI *</label>
                                <select name="usoCFDI" class="form-select" id="usoCFDI" required>
                                    <option value="">Seleccione una opción</option>
                                    @if (ViewBag.UsosCFDI != null)
                                    {
                                        foreach (var uso in ViewBag.UsosCFDI)
                                        {
                                            <option value="@uso.ClaveUsoCFDI" selected="@(Model != null && Model.CFDI == uso.ClaveUsoCFDI ? "selected" : null)">
                                                @($"{uso.ClaveUsoCFDI} - {uso.Descripcion}")
                                            </option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <br>
                        <!-- Botón de envío -->
                        <div class="text-center mb-3">
                            <button type="submit" class="btn btn-primary" style="width: 80%;">
                                <i class="bi bi-save"></i> Guardar Datos
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                <i class="bi bi-check-circle-fill"></i> Ya se han registrado tus datos fiscales.
            </div>

            <div class="row justify-content-center">

                <!-- Informacion fiscal -->
                <div class="card">
                    <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
                        <div class="w-100">
                            <!-- Bordered Tabs -->
                            <ul class="nav nav-tabs nav-tabs-bordered">
                                <li class="nav-item">
                                    <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">
                                        Resumen
                                    </button>
                                </li>
                                <li class="nav-item">
                                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-edit">
                                        Actualizar Datos
                                    </button>
                                </li>
                                <li class="nav-item">
                                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-settings">
                                        Generar Factura
                                    </button>
                                </li>
                            </ul>

                            <div class="tab-content pt-2">
                                <!-- Pestaña de Resumen -->
                                <div class="tab-pane fade show active profile-overview" id="profile-overview">
                                    <h5 class="card-title">Datos Fiscales</h5>
                                    <p class="small fst-italic">
                                        Por favor, revisa los datos fiscales proporcionados para emitir facturas correctamente.
                                    </p>
                                    @if (!hasFiscalData)
                                    {
                                        <div class="alert alert-warning text-center">
                                            No se encontraron datos fiscales registrados. Por favor, captura tus datos.
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(mensaje))
                                    {
                                        <div class="alert alert-@(tipoMensaje ?? " info") alert-dismissible fade show" role="alert">
                                            @if (tipoMensaje == "success")
                                            {
                                                <i class="bi bi-check-circle-fill"></i>
                                            }
                                            else if (tipoMensaje == "danger")
                                            {
                                                <i class="bi bi-x-circle-fill"></i>
                                            }
                                            @mensaje
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>
                                    }

                                    <!-- Datos de Domicilio -->
                                    <h5 class="card-title mt-4">Datos de Domicilio</h5>
                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 label fw-bold">Calle</div>
                                        <div class="col-lg-9 col-md-8">@Model?.Calle</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 label fw-bold">No. Exterior</div>
                                        <div class="col-lg-9 col-md-8">@Model?.NoExterior</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 label fw-bold">No. Interior</div>
                                        <div class="col-lg-9 col-md-8">@Model?.NoInterior</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 label fw-bold">Código Postal</div>
                                        <div class="col-lg-9 col-md-8">@Model?.CodigoPostal</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 label fw-bold">Colonia</div>
                                        <div class="col-lg-9 col-md-8">@Model?.Colonia</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 label fw-bold">Del./Municipio</div>
                                        <div class="col-lg-9 col-md-8">@Model?.DelMunicipio</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 label fw-bold">Ciudad</div>
                                        <div class="col-lg-9 col-md-8">@Model?.Ciudad</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 label fw-bold">Estado</div>
                                        <div class="col-lg-9 col-md-8">@Model?.Estado</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 label fw-bold">País</div>
                                        <div class="col-lg-9 col-md-8">@Model?.Pais</div>
                                    </div>

                                    <hr class="my-4">

                                    <!-- Sección de Datos Fiscales -->
                                    <h5 class="card-title">Datos Fiscales</h5>
                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 label fw-bold">Régimen Fiscal</div>
                                        <div class="col-lg-9 col-md-8">@Model?.TipoPersona</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 label fw-bold">RFC</div>
                                        <div class="col-lg-9 col-md-8">@Model?.RFC</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 label fw-bold">Razón Social</div>
                                        <div class="col-lg-9 col-md-8">@Model?.RazonSocial</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 label fw-bold">Uso del CFDI</div>
                                        <div class="col-lg-9 col-md-8">@Model?.CFDI</div>
                                    </div>
                                    <br />
                                </div>

                                <!-- Fin pestaña Resumen -->
                                <!-- Pestaña de Actualizar Datos -->
                                <div class="tab-pane fade profile-edit pt-3" id="profile-edit">
                                    <h5 class="card-title">Actualiza Tus Datos Fiscales</h5>
                                    <p class="small fst-italic">
                                        Actualiza tus datos fiscales correctamente para emitir facturas.
                                    </p>

                                    @if (!hasFiscalData)
                                    {
                                        <div class="alert alert-warning text-center">
                                            No se encontraron datos fiscales registrados. Por favor, captura tus datos.
                                        </div>
                                    }
                                    <form asp-action="ActualizarFiscal" method="POST">
                                        <!-- Datos de Domicilio -->
                                        <br />
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <label for="calle" class="form-label">Calle *</label>
                                                <input name="Calle" type="text" class="form-control" id="calle" value="@Model?.Calle" required>
                                            </div>
                                            <div class="col-md-6">
                                                <label for="noExterior" class="form-label">No. Exterior *</label>
                                                <input name="NoExterior" type="text" class="form-control" id="noExterior" value="@Model?.NoExterior" required>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <label for="noInterior" class="form-label">No. Interior</label>
                                                <input name="NoInterior" type="text" class="form-control" id="noInterior" value="@Model?.NoInterior">
                                            </div>
                                            <div class="col-md-6">
                                                <label for="codigoPostal" class="form-label">Código Postal *</label>
                                                <input name="CodigoPostal" type="text" class="form-control" id="codigoPostal" value="@Model?.CodigoPostal" required>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <label for="colonia" class="form-label">Colonia *</label>
                                                <input name="Colonia" type="text" class="form-control" id="colonia" value="@Model?.Colonia" required>
                                            </div>
                                            <div class="col-md-6">
                                                <label for="municipio" class="form-label">Del./Municipio *</label>
                                                <input name="DelMunicipio" type="text" class="form-control" id="municipio" value="@Model?.DelMunicipio" required>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <label for="ciudad" class="form-label">Ciudad *</label>
                                                <input name="Ciudad" type="text" class="form-control" id="ciudad" value="@Model?.Ciudad" required>
                                            </div>
                                            <div class="col-md-6">
                                                <label for="estado" class="form-label">Estado *</label>
                                                <input name="Estado" type="text" class="form-control" id="estado" value="@Model?.Estado" required>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <label for="pais" class="form-label">País *</label>
                                                <input name="Pais" type="text" class="form-control" id="pais" value="@Model?.Pais" required>
                                            </div>
                                        </div>
                                        <hr class="my-4">
                                        <!-- Datos Fiscales -->
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <label for="tipoPersona" class="form-label">Régimen Fiscal *</label>
                                                <select name="TipoPersona" class="form-select" id="tipoPersona" required>

                                                    <option value="">Seleccione una opción</option>
                                                    @if (ViewBag.RegimenesFiscales != null)
                                                    {
                                                        foreach (var regimen in ViewBag.RegimenesFiscales)
                                                        {
                                                            <option value="@regimen.TipoPersona" selected="@(Model != null && Model.TipoPersona == regimen.TipoPersona ? "selected" : null)">
                                                                @($"{regimen.ClaveRegimenFiscal} - {regimen.Descripcion} ({regimen.TipoPersona})")
                                                            </option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                            <div class="col-md-6">
                                                <label for="rfc" class="form-label">RFC *</label>
                                                <input name="RFC" type="text" class="form-control" id="rfc" value="@Model?.RFC" required>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <label for="razonSocial" class="form-label">Razón Social *</label>
                                                <input name="RazonSocial" type="text" class="form-control" id="razonSocial" value="@Model?.RazonSocial" required>
                                            </div>
                                            <div class="col-md-6">
                                                <label for="usoCFDI" class="form-label">Uso CFDI *</label>
                                                <select name="usoCFDI" class="form-select" id="usoCFDI" required>
                                                    <option value="">Seleccione una opción</option>
                                                    @if (ViewBag.UsosCFDI != null)
                                                    {
                                                        foreach (var uso in ViewBag.UsosCFDI)
                                                        {
                                                            <option value="@uso.ClaveUsoCFDI" selected="@(Model != null && Model.CFDI == uso.ClaveUsoCFDI ? "selected" : null)">
                                                                @($"{uso.ClaveUsoCFDI} - {uso.Descripcion}")
                                                            </option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                        <input type="hidden" name="IdFiscal" value="@Model?.IdFiscal" />
                                        <br />
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="bi bi-save"></i> Guardar Cambios
                                            </button>
                                        </div>
                                        <br />
                                    </form>
                                </div>
                                <!-- Fin pestaña Actualizar Datos -->
                                <!-- Pestaña de Generar Factura -->
                                <div class="tab-pane fade pt-3" id="profile-settings">
                                    <h5 class="card-title">Generar Factura</h5>
                                    <p class="small fst-italic">
                                        Captura correctamente los campos para emitir tu factura.
                                    </p>
                                    <br />
                                    <form method="post" action="/facturar">
                                        <!-- Emisor -->
                                        <div class="card mb-4">
                                            <div class="card-header bg-primary text-white"><h5 class="mb-0">Emisor</h5></div>
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-md-6 mb-3">
                                                        <label for="emisorRFC" class="form-label">RFC</label>
                                                        <input type="text" class="form-control" id="emisorRFC" name="EmisorRFC"
                                                               value="@ViewBag.Emisor?.RFC" readonly>
                                                    </div>
                                                    <div class="col-md-6 mb-3">
                                                        <label for="emisorNombre" class="form-label">Nombre/Razón Social</label>
                                                        <input type="text" class="form-control" id="emisorNombre" name="EmisorNombre"
                                                               value="@ViewBag.Emisor?.NombreRazonSocial" readonly>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6 mb-3">
                                                        <label for="emisorCP" class="form-label">C.P</label>
                                                        <input type="text" class="form-control" id="emisorCP" name="EmisorCP"
                                                               value="@(ViewBag.Emisor?.CodigoPostal?.ToString() ?? "")" readonly>
                                                    </div>
                                                    <div class="col-md-6 mb-3">
                                                        <label for="regimenFiscal" class="form-label">Régimen Fiscal</label>
                                                        <input type="text" class="form-control" id="regimenFiscal" name="RegimenFiscal"
                                                               value="@ViewBag.Emisor?.RegimenFiscal" readonly>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Receptor -->
                                        <div class="card mb-4">
                                            <div class="card-header bg-secondary text-white"><h5 class="mb-0">Receptor</h5></div>
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-md-4 mb-3">
                                                        <label for="receptorRFC" class="form-label">RFC</label>
                                                        <input type="text" class="form-control" id="receptorRFC" name="ReceptorRFC"
                                                               value="@Model.RFC" />
                                                    </div>
                                                    <div class="col-md-4 mb-3">
                                                        <label for="receptorNombre" class="form-label">Nombre/Razón Social</label>
                                                        <input type="text" class="form-control" id="receptorNombre" name="ReceptorNombre"
                                                               value="@Model.RazonSocial" />
                                                    </div>
                                                    <div class="col-md-4 mb-3">
                                                        <label for="receptorCP" class="form-label">C.P</label>
                                                        <input type="text" class="form-control" id="receptorCP" name="ReceptorCP"
                                                               value="@Model.CodigoPostal" />
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-4 mb-3">
                                                        <label for="tipoPersona" class="form-label">Régimen Fiscal *</label>
                                                        <select name="TipoPersona" class="form-select" id="tipoPersona" required>
                                                            <option value="">Seleccione una opción</option>
                                                            @if (ViewBag.RegimenesFiscales != null)
                                                            {
                                                                foreach (var regimen in ViewBag.RegimenesFiscales)
                                                                {
                                                                    if (Model?.TipoPersona == regimen.TipoPersona)
                                                                    {
                                                                        <option value="@regimen.TipoPersona" selected="selected">
                                                                            @($"{regimen.ClaveRegimenFiscal} - {regimen.Descripcion} ({regimen.TipoPersona})")
                                                                        </option>
                                                                    }
                                                                    else
                                                                    {
                                                                        <option value="@regimen.TipoPersona">
                                                                            @($"{regimen.ClaveRegimenFiscal} - {regimen.Descripcion} ({regimen.TipoPersona})")
                                                                        </option>
                                                                    }
                                                                }
                                                            }
                                                        </select>
                                                    </div>
                                                    <div class="col-md-4 mb-3">
                                                        <label for="receptorCalle" class="form-label">Calle</label>
                                                        <input type="text" class="form-control" id="receptorCalle" name="ReceptorCalle"
                                                               value="@Model.Calle" />
                                                    </div>
                                                    <div class="col-md-4 mb-3">
                                                        <label for="receptorNoExt" class="form-label">No. Ext</label>
                                                        <input type="text" class="form-control" id="receptorNoExt" name="ReceptorNoExt"
                                                               value="@Model.NoExterior" />
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-4 mb-3">
                                                        <label for="receptorNoInt" class="form-label">No. Int</label>
                                                        <input type="text" class="form-control" id="receptorNoInt" name="ReceptorNoInt"
                                                               value="@Model.NoInterior" />
                                                    </div>
                                                    <div class="col-md-4 mb-3">
                                                        <label for="receptorMunicipio" class="form-label">Del/Municipio</label>
                                                        <input type="text" class="form-control" id="receptorMunicipio" name="ReceptorMunicipio"
                                                               value="@Model.DelMunicipio" />
                                                    </div>
                                                    <div class="col-md-4 mb-3">
                                                        <label for="receptorColonia" class="form-label">Colonia</label>
                                                        <input type="text" class="form-control" id="receptorColonia" name="ReceptorColonia"
                                                               value="@Model.Colonia" />
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-4 mb-3">
                                                        <label for="receptorCiudad" class="form-label">Ciudad</label>
                                                        <input type="text" class="form-control" id="receptorCiudad" name="ReceptorCiudad"
                                                               value="@Model.Ciudad" />
                                                    </div>
                                                    <div class="col-md-4 mb-3">
                                                        <label for="receptorEstado" class="form-label">Estado</label>
                                                        <input type="text" class="form-control" id="receptorEstado" name="ReceptorEstado"
                                                               value="@Model.Estado" />
                                                    </div>
                                                    <div class="col-md-4 mb-3">
                                                        <label for="receptorPais" class="form-label">País</label>
                                                        <input type="text" class="form-control" id="receptorPais" name="ReceptorPais"
                                                               value="@Model.Pais" />
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6 mb-3">
                                                        <label for="usoCFDI" class="form-label">Uso CFDI *</label>
                                                        <select name="usoCFDI" class="form-select" id="usoCFDI" required>
                                                            <option value="">Seleccione una opción</option>
                                                            @if (ViewBag.UsosCFDI != null)
                                                            {
                                                                foreach (var uso in ViewBag.UsosCFDI)
                                                                {
                                                                    if (Model?.CFDI == uso.ClaveUsoCFDI)
                                                                    {
                                                                        <option value="@uso.ClaveUsoCFDI" selected="selected">
                                                                            @($"{uso.ClaveUsoCFDI} - {uso.Descripcion}")
                                                                        </option>
                                                                    }
                                                                    else
                                                                    {
                                                                        <option value="@uso.ClaveUsoCFDI">
                                                                            @($"{uso.ClaveUsoCFDI} - {uso.Descripcion}")
                                                                        </option>
                                                                    }
                                                                }
                                                            }
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Información de Pago -->
                                        <div class="card mb-4">
                                            <div class="card-header bg-info text-white"><h5 class="mb-0">Información de Pago</h5></div>
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-md-4 mb-3">
                                                        <label for="metodoPago" class="form-label">Método de Pago</label>
                                                        <select name="MetodoPago" class="form-select" id="metodoPago" required>
                                                            <option value="">Seleccione una opción</option>
                                                            @foreach (var mp in ViewBag.MetodosPago ?? Enumerable.Empty<dynamic>())
                                                            {
                                                                <option value="@mp.IdMetodo" data-clave="@mp.Clave">
                                                                    @($"{mp.Clave} - {mp.Descripcion}")
                                                                </option>
                                                            }
                                                        </select>
                                                    </div>
                                                    <div class="col-md-4 mb-3">
                                                        <label for="condicionesPago" class="form-label">Condiciones de Pago</label>
                                                        <input type="text" class="form-control" id="condicionesPago" name="CondicionesPago" readonly>
                                                    </div>
                                                    <div class="col-md-4 mb-3">
                                                        <label for="formaPago" class="form-label">Forma de Pago</label>
                                                        <select name="FormaPago" class="form-select" id="formaPago" required>
                                                            <option value="">Seleccione una opción</option>
                                                            @foreach (var fp in ViewBag.FormasPago ?? Enumerable.Empty<dynamic>())
                                                            {
                                                                <option value="@fp.IdTipoPago">
                                                                    @($"{fp.ClavePago} - {fp.TipoPago}")
                                                                </option>
                                                            }
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <label for="cuenta" class="form-label">Cuenta</label>
                                                        <input type="text" class="form-control" id="cuenta" name="Cuenta">
                                                    </div>
                                                </div>
                                            </div>
                                            <script>
                                                document.getElementById('metodoPago').addEventListener('change', function() {
                                                  const clave = this.selectedOptions[0].dataset.clave;
                                                  document.getElementById('condicionesPago').value =
                                                    clave === 'PUE' ? 'Contado' :
                                                    clave === 'PPD' ? 'Credito' : '';
                                                });
                                            </script>
                                        </div>

                                        <!-- Tickets a Facturar -->
                                        <div class="card mb-4">
                                            <div class="card-header bg-warning"><h5 class="mb-0">Tickets a Facturar</h5></div>
                                            <div class="card-body">
                                                <div class="mb-3">
                                                    <label for="ticketInput" class="form-label">Número de Ticket</label>
                                                    <input type="text" class="form-control" id="ticketInput" placeholder="Ingrese el número de ticket">
                                                </div>
                                                <div class="text-end mb-3">
                                                    <button type="button" id="agregarTicketBtn" class="btn btn-success">
                                                        <i class="bi bi-plus-circle"></i> Agregar
                                                    </button>
                                                </div>
                                                <div class="table-responsive">
                                                    <table class="table table-striped" id="ticketsTable">
                                                        <thead>
                                                            <tr>
                                                                <th>Ticket</th>
                                                                <th>Subtotal</th>
                                                                <th>Descuento</th>
                                                                <th>IEPS</th>
                                                                <th>IVA</th>
                                                                <th>Total Venta</th>
                                                                <th>Tipo de Pago</th>
                                                                <th>Acciones</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody></tbody>
                                                    </table>
                                                </div>
                                            </div>
                                            <div class="card-footer bg-transparent">
                                                <div class="d-flex justify-content-end">
                                                    <div class="card p-3" style="width:300px;">
                                                        <p class="mb-1">Subtotal s/Desc: <span id="subtotalSinDesc">0.00</span></p>
                                                        <p class="mb-1">- Descuento: <span id="descuentoTotal">0.00</span></p><hr>
                                                        <p class="mb-1">Subtotal c/Desc: <span id="subtotalConDesc">0.00</span></p>
                                                        <p class="mb-1">+ IVA: <span id="ivaTotal">0.00</span></p>
                                                        <p class="mb-1">+ IEPS: <span id="iepsTotal">0.00</span></p><hr>
                                                        <h6>Total c/Desc: <span id="totalConDesc">0.00</span></h6>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="text-center mb-4">
                                            <button type="submit" class="btn btn-success">
                                                <i class="bi bi-file-text"></i> Emitir Factura
                                            </button>
                                        </div>
                                    </form>

                                </div>   <!-- Fin pestaña Generar Factura -->
                                <!-- Incluir el script externo -->
                                <script src="~/js/selector.js"></script>

                            </div> <!-- Fin tab-content -->
                        </div> <!-- Fin w-100 -->
                    </div> <!-- Fin card-body -->
                </div> <!-- Fin card -->
            </div> <!-- Fin col-11 -->
        }
    </main>




